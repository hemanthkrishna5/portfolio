{
  "name": "@portfolio/timesheet-device-ui",
  "version": "0.1.0",
  "packageManager": "pnpm@10.12.2",
  "type": "module",
  "files": ["dist/client", "dist/server"],
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
  },

  "main": "dist/client/index.umd.js",
  "module": "dist/client/index.mjs",
  "types": "dist/client/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.umd.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "dev": "pnpm run dev:server",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "build": "pnpm run build:server && pnpm run build:client"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mqtt": "^5.3.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.10.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "nodemon": "^3.1.10"
  }
}
