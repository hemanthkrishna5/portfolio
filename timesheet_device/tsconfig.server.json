{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "dist/server",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/server", "src/shared"],
  "exclude": ["node_modules", "dist"]
}
